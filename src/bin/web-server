#!/usr/bin/env node

var path = require('path'),
    fs = require('fs'),
    lib = path.join( path.dirname( fs.realpathSync(__filename) ), '../lib' ),
    port = undefined,
    base = undefined;

    args = process.argv.splice(2);

    for( var i = 0, arg; arg = args[i]; i++ ) {

        var frag = arg.split('='),
            flag = frag[0],
            value = frag[1];

        if( flag == '--port') {
            port = value;
        }

        if( flag == '--base' ) {
            base = value;
        }

    }

require( lib + '/server.js' ).init( port, base );